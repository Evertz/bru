{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "lib": [
      "dom",
      "ES2019"
    ],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "files": [
    "src/main.ts",
    "site/main.ts"
  ],
  "angularCompilerOptions": {
    "enableIvy": true,
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "strictTemplates": true
  }
}
